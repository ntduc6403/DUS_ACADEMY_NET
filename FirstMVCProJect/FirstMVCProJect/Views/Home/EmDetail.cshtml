
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <title>EmDetail</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark ">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home/index">Trang Chu</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/product">San Pham</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/contact">Lien He</a>
            </li>
        </ul>
    </nav>
    @{ 
        string gender;
        if(ViewBag.Gender == "M")
        {
            gender = "Male";
        }
        else
        {
            gender = "Female";
           }
    }
    <div class="container-fluid">
        <table class="table w-25 m-auto">
            <tr>
                <td>Employee ID</td>
                <td>@ViewBag.EmId</td>

            </tr>
            <tr>
                <td>Employee Name</td>
                <td>@ViewBag.Name</td>

            </tr>
            <tr>
                <td>Employee salary</td>
                <td>@ViewBag.Salary</td>

            </tr>
            <tr>
                <td>Employee gender</td>
                <td>@gender</td>

            </tr>
            <tr>
                <td colspan="2">
                    @if (ViewBag.Salary > 2000)
                    {
                        <span class="text-success">Good World</span>
                    }
                    else
                    {
                        <span class="text-danger">Bad World</span>

                    }
                </td>
                <tr>
                    <td>Years</td>
                    <td>
                        @for(int i = ViewBag.Year; i < DateTime.Now.Year;i++)
            {
                            <span>@i</span>
            }

                    </td>


            </tr>
            <tr>
                <td>
                    Positions
                </td>
                <td>@foreach (var pos in ViewBag.Positions) {
                    <li>
                        @pos
                    </li>
                }</td>
            </tr>
        </table>
    </div>
</body>
</html>
