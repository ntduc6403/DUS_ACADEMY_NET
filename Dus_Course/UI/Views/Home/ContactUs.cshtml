
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Share/HomeLayout.cshtml";
}



@model DTO.GeneralDTO
    <div class="vizew-archive-list-posts-area mb-80">
        <div class="container">
            <div class="vizew-pager-area">
                <div class="vizew-pager-prev">
                    <p>ADVERTISEMENT !</p>

                    <!-- Single Feature Post -->
                    <div class="single-feature-post video-post bg-img pager-article">

                        <img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[0].ImagePath" alt="" style="width: 100%; height: 100%">

                        <div class="post-content">
                            <a href="#" class="post-cata cata-sm cata-success">ADS</a>
                            <a href="@Model.Adslist[0].Link" class="post-title">Click for details</a>
                        </div>

                    </div>
                </div>

                <div class="vizew-pager-next">
                    <p>ADVERTISEMENT !</p>

                    <!-- Single Feature Post -->
                    <div class="single-feature-post video-post bg-img pager-article">
                        <img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[1].ImagePath" alt="" style="width: 100%; height: 100%">


                        <div class="post-content">
                            <a href="#" class="post-cata cata-sm cata-success">ADS</a>
                            <a href="@Model.Adslist[1].Link" class="post-title">Click for details</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <!-- Archive Catagory & View Options -->
                    <div class="archive-catagory-view mb-50 d-flex align-items-center justify-content-between">
                        <!-- Catagory -->
                        <div class="archive-catagory">
                            <h4><i class="" aria-hidden="true"></i> @Model.CategoryName </h4>
                        </div>
                    
                    </div>
                  
                    <br />
                    <div class="contact-form-area mt-50">
                        @Html.Raw(Model.Address.LargeMapPath)
                    </div>
                    <br />
                    <div class="contact-form-area mt-50">
                        <form action="#" method="post">
                            <div class="form-group">
                                <label for="name">Name*</label>
                                <input type="text" name="Name" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="Subject">Topic*</label>
                                <input name="Subject" type="text" class="form-control" id="Subject">
                            </div>
                            <div class="form-group">
                                <label for="email">Email*</label>
                                <input type="email" name="Email" class="form-control" id="email">
                            </div>
                            <div class="form-group">
                                <label for="message">Message*</label>
                                <textarea name="message" class="form-control" id="message" cols="30" rows="10"></textarea>
                            </div>
                            <button class="btn vizew-btn mt-30" type="submit">Send Now</button>
                        </form>
                    </div>





                
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="sidebar-area">

                  

                        

                        <!-- ***** Sidebar Widget ***** -->
                        <!-- ***** Single Widget ***** -->
                        <!-- ***** Single Widget ***** -->
                        <br />
                        <!-- ***** Single Widget ***** -->
                        <div class="single-widget mb-50">
                            <!-- Section Heading -->
                            <div class="section-heading style-2 mb-30">
                                <h4>Breaking Trainings</h4>
                                <div class="line"></div>
                            </div>

                            <!-- Single Blog Post -->
                            @foreach (var item in Model.BreakingPost)
                            {
                                <div class="single-blog-post d-flex">
                                    <div class="post-thumbnail">
                                        <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt="">
                                    </div>
                                    <div class="post-content">
                                        <a href="@Url.RouteUrl("PostDetail", new {@ID=item.ID,@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName) ,@SeoLink = item.SeoLink})" class="post-title">@item.Title</a>
                                        <div class="post-meta d-flex justify-content-between">
                                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount </a>
                                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>

                                        </div>
                                    </div>
                                </div>
                            }


                            <!-- Single Blog Post -->

                        </div>

                        <!-- ***** Single Widget ***** -->
                        <!-- ***** Single Widget ***** -->
                        <div class="single-widget add-widget mb-50">
                            <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[0].ImagePath" alt=""></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

