                    <div class="single-widget add-widget mb-50">
                        <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[0].ImagePath" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>








<script>
    function displayVideo(OriginalVideoPath, title, element) {
        // Set the video src and title
        document.getElementById("iframe-view").src = OriginalVideoPath;
        document.getElementById("title-view").innerText = title;

        // Remove 'selected' class from all video items
        var items = document.querySelectorAll('.video-list li');
        items.forEach(function (item) {
            item.classList.remove('selected');
        });

        // Add 'selected' class to the clicked item
        element.classList.add('selected');

        // Add 'video-playing' class to main video container
        document.querySelector('.main-video').classList.add('video-playing');
    }
</script>


