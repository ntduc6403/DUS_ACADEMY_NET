
@{
    ViewBag.Title = "CategoryPostList";
    Layout = "~/Views/Share/HomeLayout.cshtml";
}
@model DTO.GeneralDTO
<!-- ##### Archive List Posts Area Start ##### -->
<div class="vizew-archive-list-posts-area">
    <div class="vizew-breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Feature</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Category</li>

                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center mb-80">
        <div class="col-12 col-lg-8">
            <div class="vizew-pager-area">
                <div class="vizew-pager-prev">
                    <p>ADVERTISEMENT !</p>

                    <!-- Single Feature Post -->
                    <div class="single-feature-post video-post bg-img pager-article">

                        <img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[0].ImagePath" alt="" style="width: 100%; height: 100%">

                        <div class="post-content">
                            <a href="#" class="post-cata cata-sm cata-success">ADS</a>
                            <a href="@Model.Adslist[0].Link" class="post-title">Click for details</a>
                        </div>

                    </div>
                </div>

                <div class="vizew-pager-next">
                    <p>ADVERTISEMENT !</p>

                    <!-- Single Feature Post -->
                    <div class="single-feature-post video-post bg-img pager-article">
                        <img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[1].ImagePath" alt="" style="width: 100%; height: 100%">


                        <div class="post-content">
                            <a href="#" class="post-cata cata-sm cata-success">ADS</a>
                            <a href="@Model.Adslist[1].Link" class="post-title">Click for details</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Archive Catagory & View Options -->
            <div class="archive-catagory-view mb-50 d-flex align-items-center justify-content-between">
                <!-- Catagory -->
                <div class="archive-catagory">
                    <blockquote class="vizew-blockquote mb-15" style="left:50%;">

                        <h3 style="align-items: center;"><i class="" aria-hidden="true"></i> @Model.CategoryName</h3>

                    </blockquote>

                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImages/@Model.Adslist[1].ImagePath" /></a>
                    </div>
                </div>

            </div>
            <br />
            @if (Model.Videos != null && Model.Videos.Count != 0)
            {
                foreach (var item in Model.Videos)
                {
                    <div class="single-post-area style-2">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-6">
                                <!-- Post Thumbnail -->
                                <div class="post-thumbnail">
                                    <a href="@item.OriginalVideoPath"> @Html.Raw(item.VideoPath)</a>

                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <!-- Post Content -->
                                <div class="post-content mt-0">
                                    @*<a href="#" class="post-cata cata-sm cata-success">Sports</a>*@
                                    <a href="@item.OriginalVideoPath" class="post-title mb-2">@item.Title</a>
                                    <div class="post-meta d-flex align-items-center mb-2">
                                        <a href="#" class="post-author">DUS Academy</a>
                                        <i class="fa fa-circle" aria-hidden="true"></i>
                                        <a href="#" class="post-date">@item.AddDate.ToString("dd.MM.yyyy dddd")</a>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                foreach (var item in Model.CategoryPostList)
                {
                    <!-- Single Post Area -->
                    <div class="single-post-area style-2">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-6">
                                <!-- Post Thumbnail -->
                                <div class="post-thumbnail">
                                    <a href="@Url.RouteUrl("PostDetail", new { @ID = item.ID, @CategoryName = BLL.SeoLink.GenerateUrl(item.CategoryName), @SeoLink = item.SeoLink })">
                                        <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt="">

                                    </a>

                                    <!-- Video Duration -->
                                    <span class="video-duration">05.03</span>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <!-- Post Content -->
                                <div class="post-content mt-0">
                                    <a href="#" class="post-cata cata-sm cata-cam">@item.Language</a>

                                    <a href="@Url.RouteUrl("PostDetail", new { @ID = item.ID, @CategoryName = BLL.SeoLink.GenerateUrl(item.CategoryName), @SeoLink = item.SeoLink })" class="post-title mb-2">@item.Title</a>
                                    <div class="post-meta d-flex align-items-center mb-2">
                                        <a href="#" class="post-author">DUS Academy</a>
                                        <i class="fa fa-circle" aria-hidden="true"></i>
                                        <a href="#" class="post-date">@item.AddDate.ToString("dd.MM.yyyy dddd")</a>
                                    </div>
                                    <p class="mb-2">@item.ShortContent</p>
                                    <div class="post-meta d-flex">
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount</a>
                                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i>@item.ViewCount</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Single Post Area -->


                }

            }





            <!-- Pagination -->
            <nav class="mt-50">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-left"></i></a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a></li>
                </ul>
            </nav>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="sidebar-area">

                <!-- ***** Single Widget ***** -->
                @*<div class="single-widget followers-widget mb-50">
                        <a href="#" class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i><span class="counter">198</span><span>Fan</span></a>
                        <a href="#" class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i><span class="counter">220</span><span>Followers</span></a>
                        <a href="#" class="google"><i class="fa fa-google" aria-hidden="true"></i><span class="counter">140</span><span>Subscribe</span></a>
                    </div>*@

                <!-- ***** Single Widget ***** -->
                <!-- ***** Single Widget ***** -->
                <div class="single-widget add-widget mb-50">
                    <a href="#"><img src="img/bg-img/add.png" alt=""></a>
                </div>

                <!-- ***** Sidebar Widget ***** -->
                <!-- ***** Single Widget ***** -->
                <!-- ***** Single Widget ***** -->
                <br />
                <!-- ***** Single Widget ***** -->
                <div class="single-widget mb-50">
                    <!-- Section Heading -->
                    <div class="section-heading style-2 mb-30">
                        <h4>Breaking Trainings</h4>
                        <div class="line"></div>
                    </div>

                    <!-- Single Blog Post -->
                    @foreach (var item in Model.BreakingPost)
                    {
                        <div class="single-blog-post d-flex">
                            <div class="post-thumbnail">
                                <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt="">
                            </div>
                            <div class="post-content">
                                <a href="@Url.RouteUrl("PostDetail", new {@ID=item.ID,@CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName) ,@SeoLink = item.SeoLink})" class="post-title">@item.Title</a>
                                <div class="post-meta d-flex justify-content-between">
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount </a>
                                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>

                                </div>
                            </div>
                        </div>
                    }


                    <!-- Single Blog Post -->

                </div>

                <!-- ***** Single Widget ***** -->
                <!-- ***** Single Widget ***** -->
                <div class="single-widget add-widget mb-50">
                    <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/QC_Image/@Model.Adslist[0].ImagePath" alt=""></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ##### Archive List Posts Area End ##### -->
